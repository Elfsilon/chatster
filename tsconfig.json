{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
    },
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src",
  ]
}